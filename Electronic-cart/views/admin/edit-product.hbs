<section>
    <div class="container">
        <form action="/admin/edit-product/{{product._id}}" enctype="multipart/form-data" method="POST">
            <div class="row">
                <div class="col-md-6 pt-5">
                    <div class="cart-card p-5 mt-2 mb-2">
                    <h2 class="fw-normal text-center ">EDIT PRODUCT</h2>
                    <label for="" class="p-2">Product Name</label>
                    <input type="text" name="name" class="form-control" value="{{product.name}}" required>

                    <label for="" class="p-2">Catogary</label>
                    <select name="catogary" id="" class="form-select" required>
                        <option value="{{product.catogary}}" selected>{{product.catogary}}</option>
                        <option value="development-boards">development-boards</option>
                        <option value="tools">tools</option>
                        <option value="ic">integrated-circuits</option>
                        <option value="components">components</option>

                    </select>

                    <label for="" class="p-2">Price</label>
                    <input type="text" name="price" class="form-control" value="{{product.price}}" required>

                    <label for="" class="p-2">Description</label>
                    <textarea name="description" cols="20" rows="5"
                        class="form-control" required>{{product.description}}</textarea>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="cart-card p-5 mt-2 mb-2">
                    <div class="text-center">
                        <h5 for="" class="pt-5 fw-bold">Product Image</h5>
                    </div>
                    <div class="pt-2 text-center">
                        <img id="imgView" src="/images/{{product._id}}.png" style="width: 300px;" class="img-fluid m-auto">
                    </div>
                    <input onchange="viewImage(event)" type="file" name="image" class="form-control my-4">
                    <div class="m-auto btn w-100 p-4">
                        <button type="submit" class="btn btn-dark w-50">Submit</button>
                    </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
