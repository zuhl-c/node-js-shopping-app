<section>
  <div class="container">
    <div class="wrapper  mt-5">
  <div class="formContent">
    <div class="p-2">
      <i class="fas fa-user"> Login</i>
    </div>
    <form action="/login" method="POST">
    {{#if userErr}}
    <p class="error text-danger">{{userErr}}</p>
    {{else if pswrdErr}}
      <p class="error text-danger">{{pswrdErr}}</p>
    {{/if}}
      <input class="form-input" name="email" placeholder="Email" required>
      <input class="form-input" name="password" placeholder="Password" required>
      <button type="submit" class="btn btn-dark w-50 mt-2">Log in </button>
    </form>
      {{!-- <a class="underlineHover p-2" href="#" style="font-size: 15px;">Forgot Password?</a> <br> --}}
      <a href="/signup" class="p-2">sign up ?</a>
