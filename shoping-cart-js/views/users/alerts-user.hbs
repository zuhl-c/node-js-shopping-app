<section>
    <div class="container">
        {{#each alerts}}
        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="mt-2">
                    <div class="cart-card">
                        <div class="card-body text-center">
                            <h6 class="fw-bold text-uppercase">{{this.type}}</h6>
                             <h6>Time : {{this.time}}</h6>
                             <h6>Order Id : <span class="">{{this.order}}</span></h6>
                            <p class="fw-bolder">{{this.content}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</section>