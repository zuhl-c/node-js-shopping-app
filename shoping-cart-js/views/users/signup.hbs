<section>
<div class="wrapper fadeInDown my-5">
  <div class="formContent">
    <div class="fadeIn first p-2">
      <i class="fas fa-user"> Sign up</i>
    </div>
    <form action="/signup" method="POST">
    {{#if userExist}}
     <p class="error text-danger">{{userExist}}</p>
      {{/if}}
      <input type="text" id="" class="form-input" name="name" placeholder="Name" required>
      <input type="email" id="" class="form-input" name="email" placeholder="Email" required>
      <input type="tel" id="" class="form-input" name="phone" placeholder="Phone Number" required>
      <input type="password" id="" class="form-input" name="password" placeholder="Password" required>
      <input class=" w-50 btn btn-dark text-white mt-4 m-auto" type="submit" value="Sign In" required>
     
    </form>
    <div class="p-2">
      <h6 class="p-2">Already have a Account?</h6>
      <a href="/login" class="mb-4 w-50 btn btn-dark text-white m-auto">Log In</a>
    </div>
  </div>
</div>
</section>